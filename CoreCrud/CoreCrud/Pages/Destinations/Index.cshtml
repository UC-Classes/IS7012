@page
@model CoreCrud.Pages.Destinations.IndexModel

@{
    ViewData["Title"] = "List of Destinations";
}

<img src="https://www.centcom.mil/Portals/6/Official_CENTCOM_Seal.png?ver=2016-07-26-155712-367" alt="CENTCOM" width="100" height="100" />
<h1 class="display-4">List of CENTCOM Destinations</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].TripName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].LeaveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].NationalParks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].DiveSites)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Destination) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TripName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NationalParks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiveSites)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.CountryName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
